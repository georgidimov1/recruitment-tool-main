<form action={{action}} method="POST">
  <label for="fname"><h2>Job title:</h2></label>
  <input type="text" id="fname" name="title" value={{title}}>
  <label for="lname"><h2>Job description:</h2></label>
  <textarea type="text" id="lname" name="description" rows="4" cols="50">{{description}}</textarea>
  <br>
  <br>
  <button class="btn" type="submit" >Submit</button>
</form>