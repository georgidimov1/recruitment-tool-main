<fieldset>
  <legend>Details</legend>
  <label>Job title:</label><br>
  <p> {{title}}</p> 
  <br>
  <label>Job description:</label>
  <br>
  <p>{{description}}<p>
</fieldset>
<fieldset>
  <legend>Add Interviews</legend>
        <div>
          <form action={{action}} method="POST">
            <br>
            <label id="add">Add Interviews:</label>
            <select name="selected" id="add">
              {{#each candidate}}
              <option value={{_id}}>{{firstName}} {{lastName}}</option>
              {{/each}}
            </select>
            <button class="btn" type="submit" >ADD</button>
          </form>
        </div>
</fieldset>
