<fieldset>
  <legend>Details</legend>
  <label>Job title:</label><br>
  <p> {{title}}</p> 
  <br>
  <label>Job description:</label>
  <br>
  <p>{{description}}<p>
</fieldset>
<fieldset>
  <legend>Candidates</legend>
    {{#each candidate}}
     <div class="list">
       <ul>
         <li><a href='/candidates/{{_id}}'>{{firstName}} {{lastName}}</a><a class= "btn1" href='candidates/{{_id}}'>delete</a></li>
       </ul>
     </div>
    {{/each}}
</fieldset>
<fieldset>
  <legend>Add</legend>
        <div>
          <form action={{action}} method="POST">
            <br>
            <label id="add">Add candidates:</label>
            <select name="selected" id="add">
              {{#each persons}}
              <option value={{_id}}>{{firstName}} {{lastName}}</option>
              {{/each}}
            </select>
            <button class="btn" type="submit" >ADD</button>
          </form>
        </div>
</fieldset>
